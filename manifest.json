{
    "manifest-version": 3,
    "short_name": "totalcrypto",
    "name": "Total Crypto",
    "icons": [
      {
        "src": "favicon.ico",
        "sizes": "64x64 32x32 24x24 16x16",
        "type": "image/x-icon"
      },
      {
        "src": "192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ],
    "display": "standalone",
    "theme_color": "#000000",
    "background_color": "#sffffff",
    "permissions": ["tabs", "activeTabs"],
    "description": "A simple chrome extension that keeps you safe from cyber attacks",
    "content_security_policy": {
      "extension_pages": "default-src 'self'",
      "sandbox": "default-src 'self'"
    },
    "optional_permissions": ["unlimitedStorage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "scripts": {
        "service_worker": "../service_worker.js",
        "type": "module"
      }
    },
    "action": {
      "default_popup": "index.html"
    }
  }